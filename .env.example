APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

